{
  "name": "rise",
  "version": "0.6.0",
  "description": "Lightweight Event Sourcing framework for building durable Core layers in TypeScript",
  "keywords": [
    "event-sourcing",
    "cqrs",
    "ddd",
    "typescript",
    "aggregate",
    "domain-driven-design"
  ],
  "author": "RISE Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rise-es/rise.git"
  },
  "bugs": {
    "url": "https://github.com/rise-es/rise/issues"
  },
  "homepage": "https://github.com/rise-es/rise#readme",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write"
    ]
  },
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20"
  }
}
