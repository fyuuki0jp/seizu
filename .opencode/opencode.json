{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "web_search": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp"
    }
  },
  "agent": {
    "minify": {
      "description": "Specialized in cleaning up code: removing unused imports, dead code, redundant comments, and simplifying overly complex logic",
      "mode": "subagent",
      "model": "github-copilot/claude-opus-4.5",
      "prompt": "{file:./prompts/minify.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "create_plan": false,
        "update_plan": false,
        "read_plan": true
      }
    },
    "build": {
      "description": "Specialized in building and implementing features",
      "mode": "subagent",
      "model": "github-copilot/claude-opus-4.5",
      "prompt": "{file:./prompts/build.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "create_plan": false,
        "update_plan": false,
        "read_plan": true
      }
    },
    "ui-builder": {
      "description": "Specialized in building user interfaces",
      "mode": "subagent",
      "model": "github-copilot/gemini-3-pro-preview",
      "prompt": "{file:./prompts/ui-builder.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "create_plan": false,
        "update_plan": false,
        "read_plan": true
      }
    },
    "explore": {
      "description": "Specialized in researching internal codebase: file structure, existing implementations, and current patterns",
      "mode": "subagent",
      "model": "github-copilot/gemini-3-flash-preview",
      "prompt": "{file:./prompts/explore.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "create_plan": false,
        "update_plan": false,
        "read_plan": true
      }
    },
    "librarian": {
      "description": "Specialized in researching external information: official docs (context7), GitHub implementations (gh_grep), and web search",
      "mode": "subagent",
      "model": "github-copilot/gemini-3-flash-preview",
      "prompt": "{file:./prompts/librarian.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "create_plan": false,
        "update_plan": false,
        "read_plan": true
      }
    },
    "plan": {
      "description": "Specialized in creating and updating project plans",
      "mode": "primary",
      "model": "github-copilot/claude-opus-4.5",
      "prompt": "{file:./prompts/plan.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "create_plan": true,
        "update_plan": true,
        "read_plan": true
      }
    },
    "main": {
      "description": "Main agent coordinating subagents and managing overall workflow",
      "mode": "primary",
      "model": "github-copilot/claude-opus-4.5",
      "prompt": "{file:./prompts/main.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "create_plan": false,
        "update_plan": true,
        "read_plan": true
      }
    },
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "model": "github-copilot/gpt-5.2-codex",
      "prompt": "{file:./prompts/code-reviewer.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "create_plan": false,
        "update_plan": false,
        "read_plan": true
      }
    },
    "plan-reviewer": {
      "description": "Reviews ExecPlans for self-containment, feasibility, verifiability, and completeness before execution",
      "mode": "subagent",
      "model": "github-copilot/gpt-5.2-codex",
      "prompt": "{file:./prompts/plan-reviewer.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "create_plan": false,
        "update_plan": false,
        "read_plan": true
      }
    }
  }
}
