{
  "name": "kata-cli",
  "version": "2.0.0",
  "description": "Unified CLI and tools for kata contracts",
  "author": "kata Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kata-es/kata.git",
    "directory": "packages/kata-cli"
  },
  "type": "module",
  "bin": {
    "kata": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/doc/index.d.ts",
        "default": "./dist/doc/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "doc:self": "node --import tsx/esm src/cli.ts doc --config kata.config.ts",
    "doc:self:ja": "node --import tsx/esm src/cli.ts doc --config kata.config.ts --locale ja --output docs/contracts.ja.md",
    "doc:self:check": "node --import tsx/esm src/cli.ts doc --config kata.config.ts --check"
  },
  "dependencies": {
    "kata": "workspace:*",
    "typescript": "^5.9.3",
    "cac": "^6.0.0"
  }
}
